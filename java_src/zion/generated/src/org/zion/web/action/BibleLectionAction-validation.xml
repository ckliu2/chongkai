<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="bibleLection.volume">
        <field-validator type="required">
            <message key="errors.required"></message>
        </field-validator>
    </field>
    <field name="bibleLection.volume">
        <field-validator type="int">
            <message key="errors.numericRequired"></message>
        </field-validator>
    </field>
    <field name="bibleLection.chapter">
        <field-validator type="required">
            <message key="errors.required"></message>
        </field-validator>
    </field>
    <field name="bibleLection.chapter">
        <field-validator type="int">
            <message key="errors.numericRequired"></message>
        </field-validator>
    </field>
    <field name="bibleLection.verse">
        <field-validator type="required">
            <message key="errors.required"></message>
        </field-validator>
    </field>
    <field name="bibleLection.verse">
        <field-validator type="int">
            <message key="errors.numericRequired"></message>
        </field-validator>
    </field>
    <field name="bibleLection.lection">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="errors.required"></message>
        </field-validator>
    </field>
</validators>
