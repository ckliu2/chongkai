<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:jdbc.properties"/>
    </bean>

    <bean id="txProxyTemplate" abstract="true"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager"><ref bean="transactionManager"/></property>
        <property name="transactionAttributes">
            <props>
                <prop key="save*">PROPAGATION_REQUIRED</prop>
                <prop key="remove*">PROPAGATION_REQUIRED</prop>
                <prop key="update*">PROPAGATION_REQUIRED</prop>
                <prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="commonManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.common.service.impl.CommonManagerImpl">
                <property name="genericDAO" ref="commonDAO"/>
            </bean>
        </property>
    </bean>

    <bean id="appPropertyManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="com.common.service.impl.AppPropertyManagerImpl">
                <property name="genericDAO" ref="appPropertyDAO"/>
            </bean>
        </property>
    </bean>

<!-- ********************************************* -->

    <bean id="profitDetailManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="northwest.common.service.impl.ProfitDetailManagerImpl">
                <property name="genericDAO" ref="profitDetailDAO"/>
            </bean>
        </property>
    </bean>

    <bean id="customerStandardCostManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="northwest.common.service.impl.CustomerStandardCostManagerImpl">
                <property name="genericDAO" ref="customerStandardCostDAO"/>
            </bean>
        </property>
    </bean>

    <bean id="profitFeeManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="northwest.common.service.impl.ProfitFeeManagerImpl">
                <property name="genericDAO" ref="profitFeeDAO"/>
            </bean>
        </property>
    </bean>

    <bean id="standardCostManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="northwest.common.service.impl.StandardCostManagerImpl">
                <property name="genericDAO" ref="standardCostDAO"/>
            </bean>
        </property>
    </bean>

    <bean id="profitManager" parent="txProxyTemplate">
        <property name="target">
            <bean class="northwest.common.service.impl.ProfitManagerImpl">
                <property name="genericDAO" ref="profitDAO"/>
            </bean>
        </property>
    </bean>

